startup_message off

defscrollback 10000

vbell off

hardstatus alwayslastline "%{gk}[ %{G}%H %{g}] %{wk}%?%-Lw%?%{r}(%{W}%n*%f %t%?(%u)%?%{r})%{w}%?%+Lw%?%?]"

screen -t work    0
screen -t server  1
screen -t console 2
screen -t testing 3

select 0

# Enables copying of marked buffers to the OS X clipboard
bind b eval "writebuf" "exec sh -c 'pbcopy < /tmp/screen-exchange'"

# Remap C-A to C-Z so we can have our IRB Emacs bindings
escape ^zz
