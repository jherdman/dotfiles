# See http://blog.deadinkvinyl.com/2009/04/10/screen-and-my-screenrcfile/

startup_message off

defscrollback 10000

# Message to display when activited detected in monitored window
activity "activity in %n (%t) [%w:%s]~"

# Detach on session hangup instead of terminating completely
autodetach on

# When a bell character is sent to a background window, screen displays a
# notification in the message line. The notification message can be re-defined
# by this command.
bell_msg "bell     in %n (%t) [%w:%s]~"

caption    always         "%{u kg}%H %=Load: %l%{kg}"
hardstatus alwayslastline "%?%{g}%-Lw%?%{Y}%n*%f %t%?(%u)%?%?%{kg}%+Lw%?"

screen -t work    0
screen -t server  1
screen -t console 2
screen -t testing 3

select 0

# Enables copying of marked buffers to the OS X clipboard
bind b eval "writebuf" "exec sh -c 'pbcopy < /tmp/screen-exchange'"

# Remap C-A to C-Z so we can have our IRB Emacs bindings
escape ^zz
