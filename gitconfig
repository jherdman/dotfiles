# Don't forget to manually enter GIT_AUTHOR_NAME and GIT_AUTHOR_EMAIL 
# in your .zshrc file.

[alias]
  co = checkout
  pr = pull --rebase
  ci = commit -v
  rollback = reset --soft HEAD^
  glog = log --graph
  st = status
  br = branch
  df = diff
  who = shortlog -s --
  edit-modified = "!f() { git ls-files --modified | cut -f2 | sort -u ; }; vim -p `f`"
  unstage = reset HEAD
  su = submodule update
  sui = submodule update --init
  lod = log --oneline --decorate
  dfw = diff --word-diff
  datetag = !git tag `date \"+%Y%m%d%H%M\"`
[merge]
	tool = opendiff
[color]
 	ui = true
[color "branch"]
 	current = yellow reverse
 	local   = yellow
 	remote	= green
[color "diff"]
 	meta	= yellow bold
 	frag	= magenta bold
 	new	= green bold
  old = red bold
  whitespace = red reverse
[color "status"]
 	added	= yellow
 	changed = green
 	untracked = cyan
[mirror]
	summary = true
[core]
	autocrl = true
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = /Users/james/.gitignore
[difftool "Kaleidoscope"]
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
[push]
	default = tracking
